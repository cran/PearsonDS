citHeader("To cite PearsonDS in publications use")

## R >= 2.8.0 passes package metadata to citation().
if(!exists("meta") || is.null(meta)) meta <- packageDescription("PearsonDS")
year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

citEntry(entry = "Manual",
         title = "{PearsonDS}: Pearson Distribution System",
         author = personList(as.person("Martin Becker")),
         year = year,
         note = note,
         url = "http://CRAN.R-project.org/package=PearsonDS",

         textVersion =
         paste("Martin Becker",
   	       sprintf("(%s).", year),	 
               "PearsonDS: Pearson Distribution System.",
	       paste(note, ".", sep = ""),
               "URL http://CRAN.R-project.org/package=PearsonDS")
)
